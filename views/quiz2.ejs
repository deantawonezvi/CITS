            </div>
            <script>
                swal("Oops!", "I think you answered the wrong question.", "error");

                $(document).ready( function() {
                    $(".seq_0").hide();
                    $(".seq_1").hide();

                    $("#moveOn2").click(function(){
                        $("#wrong_v").hide(1550);
                        $(".qsn2").show(1500);
                    });
                });
            </script>

            <%}if (user.lesson_answers.q_variable == 2){%>
            <div id="totallywrong_v">
                <div class="alert alert-danger">
                    <div class="v_totallywrong"></div>
                    <br>
                    <button class="btn btn-outlined btn-theme btn-md" id="moveOn3"  data-wow-delay="0.7s" style="border-radius: 0px">Move On</button>
                </div>
            </div>
            <script>
                swal("Oops!", "I think you answered the wrong question.", "error");
                $(document).ready( function() {
                    $(".seq_0").hide();
                    $(".seq_1").hide();

                    $("#moveOn3").click(function(){
                        $("#totallywrong_v").hide(1550);
