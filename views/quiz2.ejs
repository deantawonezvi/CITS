                <%}%>
            </div>
            <% if(user.quiz2_progress == 1){%>

            <% if(user.lesson_answers.q_variable == 1){%>
            <div id="correct_v">
                <div class="alert alert-success fade in" id="correct1">
                    <div class="v_correct"></div>
                </div>
                <br>
                <button class="btn btn-outlined btn-theme btn-md" id="moveOn"  data-wow-delay="0.7s" style="border-radius: 0px">Move On</button><br>
            </div>
            <script>
                swal("Good Job", "Couldn't have said any better.", "success");

                $(document).ready( function() {
                    $(".qsn1").hide();
                    $(".qsn2").hide();


                    $("#moveOn").click(function(){
                        $("#correct_v").hide(1550);
                        $(".qsn2").show(1500);
                    });
                });
            </script>
            <%} if(user.lesson_answers.q_variable == 1.5){%>
